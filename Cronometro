  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Timer</title>
    <style>
      body {
        background-color: black;
        display: flex;
        align-items: center;
        margin: 40px;
        flex-direction: column;
      }
      .start {
        background-color: #ff4791;
        border: none;
        border-radius: 4px;
        color: white;
        padding: 4px 12px;
        font-size: 16px;
      }
      .stop {
        background-color: #ccb4be;
        color: black;
      }
      button:hover {
        background-color: #db5e90;
        cursor: pointer;
      }
      h1 {
        font-size: 80px;
        color: white;
      }
    </style>
  </head>
  <body>
    <div>
      <input type="date" value="2022-05-08" />
      <button class="start" onclick="start()">Vai</button>;
      <button class="start + stop" onclick="stop()">Resetar</button>;
    </div>
    <h1>üê£</h1>
    <script>
      const second = 1000;
      const minute = 60 * second;
      const hour = 60 * minute;
      const day = 24 * hour;

      let diff;
      let finalDate;
      let intervalID;

      function start() {
        const date = document.querySelector("input").value;
        finalDate = new Date(date).getTime();
        localStorage.setItem("timer", finalDate);
        intervalID = setInterval(timer, 1000);
      }
      function timer() {
        now = new Date().getTime();
        diff = finalDate - now;
        const days = Math.floor(diff / day);
        const hours = Math.floor((diff % day) / hour) + 3;
        const minutes = Math.floor((diff % hour) / minute);
        const seconds = Math.floor((diff % minute) / second);
        console.log(days, hours, minutes, seconds);
        document.querySelector(
          "h1"
        ).innerHTML = `${days} d ${hours} h ${minutes} m ${seconds} s`;
      }
      if (localStorage.getItem("timer")) {
        intervalID = setInterval(timer, 1000);
        finalDate = localStorage.getItem("timer");
      }
      function stop() {
        document.querySelector("h1").innerText = "üê£";
        localStorage.removeItem("timer");
        clearInterval(intervalID);
      }
    </script>
  </body>
</html>
